<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fp.assignments.assignment_2.controller.form.CreateBookingFormController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create/Edit Booking" style="-fx-font-size: 18; -fx-font-weight: bold"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Event:" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="eventNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Date/Time:" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="eventDateTimeLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Duration:" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="eventDurationLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Venue:" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="venueComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
        <Label fx:id="venuePriceLabel" style="-fx-font-weight: bold"/>
        <Label fx:id="totalPriceLabel" style="-fx-font-weight: bold"/>
        <Label fx:id="commissionLabel" style="-fx-font-weight: bold"/>
    </VBox>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Re-/book" onAction="#handleCreateBooking" defaultButton="true"/>
    </HBox>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fp.assignments.assignment_2.controller.home.pane.AllUserController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="userNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold" HBox.hgrow="ALWAYS"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addStaffButton" text="+ Add Staff Member" onAction="#showAddUserForm"/>
    </HBox>

    <Label text="Double-click any staff member to view their details. You can edit or remove staff accounts if you have the appropriate permissions."/>
    <TableView fx:id="userTable" VBox.vgrow="ALWAYS"/>
</VBox>
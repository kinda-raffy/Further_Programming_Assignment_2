<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fp.assignments.assignment_2.controller.home.pane.BacklogController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Events to Schedule" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label text="Below is a backlog of events that requires a booking. Double click on an event to see further details and assign an individual booking."/>

    <TableView fx:id="eventsTable" VBox.vgrow="ALWAYS" maxHeight="400">
        <placeholder>
            <Label text="No events to schedule."/>
        </placeholder>
    </TableView>

    <HBox spacing="20">
        <VBox spacing="10" HBox.hgrow="ALWAYS" minWidth="600">
            <Label text="Recommended Venues" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Double click on a table entry below to immediately create a booking between the venue and the selected event."/>

            <TableView fx:id="recommendedVenuesTable" VBox.vgrow="ALWAYS">
                <placeholder>
                    <Label text="Unable to find a match, either select an event in the table above or loosen your criteria in the settings to the right."/>
                </placeholder>
            </TableView>
        </VBox>

        <VBox spacing="10" minWidth="600">
            <Label text="Recommendation Settings" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Influence the recommended venues based on the following event criteria:"/>

            <VBox spacing="5">
                <CheckBox fx:id="availableCheck" text="Available" selected="true"/>
                <CheckBox fx:id="eventTypeCheck" text="Event Type" selected="true"/>
                <CheckBox fx:id="venueCategoryCheck" text="Venue Category" selected="true"/>
                <CheckBox fx:id="capacityCheck" text="Sufficient Capacity" selected="true"/>
            </VBox>
        </VBox>
    </HBox>
</VBox>
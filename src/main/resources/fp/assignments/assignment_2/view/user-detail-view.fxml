<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fp.assignments.assignment_2.controller.UserDetailController"
      style="-fx-background-color: white;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button text="Back"
            onAction="#goBack"
            style="-fx-background-color: #e0e0e0;">
        <VBox.margin>
            <Insets bottom="-10"/>
        </VBox.margin>
    </Button>

    <Label fx:id="titleLabel" style="-fx-font-size: 24; -fx-font-weight: bold"/>

    <GridPane hgap="10" vgap="8">
        <Label text="Username:" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="First Name:" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="firstNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Last Name:" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="lastNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Type:" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="typeLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Edit" onAction="#handleEdit" style="-fx-background-color: #e0e0e0;"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete"
                style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
    </HBox>
</VBox>

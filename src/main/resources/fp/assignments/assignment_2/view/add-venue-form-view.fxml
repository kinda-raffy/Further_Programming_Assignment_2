<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fp.assignments.assignment_2.controller.AddVenueFormController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create Venue" style="-fx-font-size: 18; -fx-font-weight: bold"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Capacity:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="capacityField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Hire Price per Hour:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="hirePriceField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Suitability Keywords:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="keywordsField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                   promptText="Separate with semicolons"/>
    </GridPane>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Create" onAction="#handleCreate" defaultButton="true"/>
    </HBox>
</VBox>

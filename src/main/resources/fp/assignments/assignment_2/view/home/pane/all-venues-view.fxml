<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fp.assignments.assignment_2.controller.home.pane.AllVenueController" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Venue Search" style="-fx-font-size: 18; -fx-font-weight: bold"/>

    <GridPane hgap="10" vgap="5">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameSearchField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                  promptText="e.g. mcg"/>

        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="categorySearchField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                  promptText="e.g. indoor"/>

        <Label text="Capacity:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <TextField fx:id="capacitySearchField" promptText="e.g. 100"/>
            <Label fx:id="capacityErrorLabel" textFill="red" visible="false" managed="false"/>
        </VBox>

        <Label text="Keywords:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="keywordsSearchField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                  promptText="e.g. disco | festival &amp; large"/>

        <Label text="Check Availability:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <DatePicker fx:id="availabilityDatePicker" promptText="dd-mm-yyyy"/>
            <TextField fx:id="startTimeField" promptText="HH:mm" prefWidth="100"/>
            <TextField fx:id="endTimeField" promptText="HH:mm" prefWidth="100"/>
        </HBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="+ Create Venue" onAction="#handleCreateVenue"/>
        <Button fx:id="deleteButton" text="Delete Venue" onAction="#handleDeleteVenue" disable="true"
                style="-fx-base: #ff0000; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="venuesTable" VBox.vgrow="ALWAYS"/>
</VBox>